{
  "name": "fragments",
  "private": true,
  "version": "0.8.1",
  "description": "Fragments back-end API",
  "scripts": {
    "lint": "eslint \"./src/**/*.js\"",
    "start": "node src/index.js",
    "dev": "node --env-file=debug.env --watch ./src/index.js",
    "debug": "node --env-file=debug.env --inspect=0.0.0.0:9229 --watch ./src/index.js",
    "test": "cross-env NODE_ENV=test node -r dotenv/config ./node_modules/jest/bin/jest.js -c jest.config.js --runInBand --verbose",
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ParamKatrodia/fragments.git"
  },
  "author": "Param Katrodia",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@orangeopensource/hurl": "^7.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "3.6.2",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "aws-jwt-verify": "^5.1.0",
    "basic-auth": "^2.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-auth": "^4.2.1",
    "http-auth-passport": "^1.0.7",
    "jwks-rsa": "^3.2.0",
    "nanoid": "3.3.7",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "pino": "^9.9.5",
    "pino-http": "^10.5.0",
    "pino-pretty": "^13.1.1",
    "stoppable": "^1.1.0"
  }
}
